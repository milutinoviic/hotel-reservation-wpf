<Window x:Class="HotelReservation.ReceptionistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelReservation"
        mc:Ignorable="d"
        Title="ReceptionistWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem 
 Header="General"
 Height="30">
   
  
                <MenuItem 
     Name="GuestsMI" 
     Header="Guests"
     Click="GuestsMI_Click"
      />
       
  
                <MenuItem 
     Name="ReservationsTypeMI" 
     Header="Reservations"
     Click="ReservationsTypeMI_Click"
         />
            </MenuItem>

            <Button Content="Log out" Click="LogoutButton_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="664,5,0,5"/>
        </Menu>

    </Grid>
</Window>
