<Window x:Class="HotelReservation.Windows.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelReservation.Windows"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" Margin="30">
            <StackPanel Orientation="Horizontal">
                <Label Height="30" Width="70" Content="Username:" />
                <TextBox Name="txtUsername" TextWrapping="Wrap" Width="160" Height="20"/>

            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <Label Height="30" Width="70" Content="Password:" />
                <PasswordBox Name="txtPassword" Width="160" Height="20"/>

            </StackPanel>
            
            <Button Content="Log in" Click="Login_Click" Margin="100,15,70,0" />
        </StackPanel>
        


    </Grid>
</Window>
